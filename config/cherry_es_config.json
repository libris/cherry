{
    "settings": {
        "analysis": {
            "char_filter": {
                "remove_nonalphas": {
                    "type": "pattern_replace",
                    "pattern": "[^\\p{IsAlphabetic} ]",
                    "replacement": ""
                }
            },
            "analyzer": {
                "autocomplete": {
                    "filter": [
                        "standard",
                        "lowercase",
                        "stopword_filter",
                        "autocomplete_filter"
                    ],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "fulltext_analyzer": {
                    "filter": [
                        "standard",
                        "lowercase",
                        "type_as_payload"
                    ],
                    "char_filter": ["html_strip"],
                    "tokenizer": "standard",
                    "type": "custom"
                },
                "shingle_analyzer": {
                    "type":             "custom",
                    "tokenizer":        "whitespace",
                    "filter": [
                        "lowercase",
                        "stopword_filter",
                        "shingle_filter"
                    ]
                },
                "bigram_analyzer": {
                    "type":             "custom",
                    "tokenizer":        "whitespace",
                    "filter": [
                        "lowercase",
                        "stopword_filter",
                        "bigram_filter"
                    ],
                    "char_filter": ["remove_nonalphas"]
                },
                "unigram_analyzer": {
                    "type":             "custom",
                    "tokenizer":        "whitespace",
                    "filter": [
                        "lowercase",
                        "stopword_filter"
                    ]
                }
            },
            "filter": {
                "autocomplete_filter": {
                    "max_gram": 50,
                    "min_gram": 2,
                    "type": "edge_ngram"
                },
                "shingle_filter": {
                    "type":             "shingle",
                    "min_shingle_size": 2,
                    "max_shingle_size": 2,
                    "output_unigrams":  false
                },
                "bigram_filter": {
                    "type":             "shingle",
                    "min_shingle_size": 2,
                    "max_shingle_size": 2,
                    "output_unigrams":  false,
                    "filler_token": ''
                },
                "stopword_filter": {
                    "type": "stop",
                    "stopwords": "_swedish_"
                }
            }
        }
    },
    "mappings": {
        "_default_": {
            "properties": {
